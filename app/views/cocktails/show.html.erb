<div class="page-header">
  <%= link_to cocktails_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_cocktail_path(@cocktail), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show cocktail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @cocktail.name %></dd>

  <dt>Alcohol:</dt>
  <dd><%= @cocktail.alcohol %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Ingredients:</dt>
  <% @cocktail.ingredients.each do |ingredient| %>
    <dd><%= link_to ingredient, ingredient %></dd>
  <% end %>
</dl>
